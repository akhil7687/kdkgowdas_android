<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="horizontal">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_cast_white_24dp"
            android:id="@+id/feed_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="1"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_members"
            android:layout_weight="1"
            android:id="@+id/members_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_families"
            android:layout_weight="1"
            android:id="@+id/families_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_chrome_reader_mode_white_24dp"
            android:layout_weight="1"
            android:id="@+id/articles_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_shopping_basket_white_24dp"
            android:layout_weight="1"
            android:id="@+id/classified_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_home_white_24dp"
            android:layout_weight="1"
            android:id="@+id/home_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_view_headline_white_24dp"
            android:layout_weight="1"
            android:id="@+id/toggle_btn"
            android:background="?attr/selectableItemBackgroundBorderless"
            />

    </LinearLayout>
</RelativeLayout>
